<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livros</title>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
    <h1>Lista de livros</h1>
<div id="app">
<table class="table mt-5">
    <thead>
    <tr>
        <th scope="col">identificador</th>
        <th  scope="col">nome</th>
        <th  scope="col">preço</th>
        <th  scope="col">Ação</th>
    </tr>
</thead>
<tbody>
    <% books.forEach(function(item) { %>
        <tr>
            
            <th th scope="row"><%= item.id %></th>
            <td ><%= item.nome %></td>
            <td v-model="preco"><%= item.preco %></td> 
            <td>
                <a href="/delete?id=<%= item.id %>" class="btn btn-danger" >Deletar</a>
                <a href="/edit?id=<%= item.id %>" class="btn btn-warning">Editar</a>
            </td>
        </tr> 
    </tbody>
     <% }); %>
    </table>
</div>
    </div>
    <div class="col-md-3">
       
    </div>
    </div>
   
    </div>
    <a href="/form" class="btn btn-success mt-3 m-5"> Inserir dados na tabela</a>

</body>
</html>
